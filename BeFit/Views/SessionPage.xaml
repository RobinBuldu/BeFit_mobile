<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeFit.Views.SessionPage"
             Title="Workouts">
    <Grid RowDefinitions="Auto, *">
        <VerticalStackLayout Grid.Row="0" Padding="10" Spacing="10">
            <Label Text="Start Time" FontAttributes="Bold"/>
            <DatePicker Date="{Binding Start}"/>
            <TimePicker Time="{Binding Start}"/>

            <Label Text="End Time" FontAttributes="Bold"/>
            <DatePicker Date="{Binding End}"/>
            <TimePicker Time="{Binding End}"/>

            <Button Text="Create Workout" Command="{Binding CreateCommand}"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Sessions}" Margin="10" SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding StartTime, StringFormat='Start: {0:g}'}" FontSize="16"/>
                            <Label Text="{Binding EndTime, StringFormat='End: {0:g}'}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>